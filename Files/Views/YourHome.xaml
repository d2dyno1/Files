<Page
    x:Class="Files.Views.YourHome"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:Files.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:widgets="using:Files.UserControls.Widgets"
    Background="{ThemeResource SolidBackgroundFillColorBaseBrush}"
    mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Margin="14,14,14,14" Spacing="24">
            <StackPanel.ChildrenTransitions>
                <TransitionCollection>
                    <EntranceThemeTransition />
                </TransitionCollection>
            </StackPanel.ChildrenTransitions>
            
            <!-- No Widgets info -->
            <Grid RowSpacing="25" VerticalAlignment="Center" HorizontalAlignment="Stretch" x:Name="NoWidgetsInfo" x:Load="{x:Bind NoWidgetsShown}">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <TextBlock
                    x:Uid="HomePageEmptyPageTitle"
                    Grid.Row="0"
                    Text="It's quiet here..."
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    FontWeight="Bold"
                    FontSize="48"/>

                <StackPanel 
                    Grid.Row="1"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
                    <TextBlock
                        Text="{x:Bind HomePageEmptyPageSubtitleP1Text, Mode=OneWay}"
                        FontSize="24"
                        xml:space="preserve"/>

                    <HyperlinkButton
                        x:Uid="HomePageEmptyPageSubtitleHyperlink"
                        Padding="0"
                        FontSize="24"
                        Click="Hyperlink_Click"
                        Content="Settings"/>

                    <TextBlock
                        FontSize="24"
                        xml:space="preserve"
                        Text="{x:Bind HomePageEmptyPageSubtitleP2Text, Mode=OneWay}"/>
                </StackPanel>
                

            </Grid>
            
            <!-- Library Cards Widget -->
            <widgets:LibraryCards
                x:Name="LibraryWidget"
                x:Load="{x:Bind AppSettings.ShowLibraryCardsWidget, Mode=OneWay}"
                ShowMultiPaneControls="{x:Bind converters:MultiBooleanConverter.AndConvert(AppInstance.IsMultiPaneEnabled, AppInstance.IsPageMainPane), Mode=OneWay}" />

            <!-- Drives Widget -->
            <widgets:DrivesWidget
                x:Name="DrivesWidget"
                x:Load="{x:Bind AppSettings.ShowDrivesWidget, Mode=OneWay}"
                AppInstance="{x:Bind AppInstance, Mode=OneWay}"
                ShowMultiPaneControls="{x:Bind converters:MultiBooleanConverter.AndConvert(AppInstance.IsMultiPaneEnabled, AppInstance.IsPageMainPane), Mode=OneWay}" />

            <!-- Bundles Widget -->
            <widgets:Bundles x:Name="BundlesWidget" x:Load="{x:Bind AppSettings.ShowBundlesWidget, Mode=OneWay}" />

            <!-- Recent File Widget -->
            <widgets:RecentFiles x:Name="RecentFilesWidget" x:Load="{x:Bind AppSettings.ShowRecentFilesWidget, Mode=OneWay}" />
        </StackPanel>
    </ScrollViewer>
</Page>
